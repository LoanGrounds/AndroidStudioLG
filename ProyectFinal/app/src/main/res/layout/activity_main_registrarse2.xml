<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityRegistrarse2">

    <TextView
        android:id="@+id/loangrounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/play"
        android:foregroundGravity="center"
        android:gravity="center_horizontal|top"
        android:text="LoanGrounds"
        android:textColor="#D417A4B7 "

        android:textColorHint="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnSig1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loangrounds">

        <EditText

            android:id="@+id/edtTelefono"
            android:layout_width="316.88dp"
            android:layout_height="47.98dp"
            android:layout_marginBottom="24dp"
            android:width="1dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:fontFamily="@font/noto_sans"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Ingrese telefono"
            android:inputType="textPersonName"
            android:padding="10dip"
            android:textStyle="normal" />

        <EditText

            android:id="@+id/edtCiudad"
            android:layout_width="316.88dp"
            android:layout_height="47.98dp"
            android:layout_marginBottom="24dp"
            android:width="1dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:fontFamily="@font/noto_sans"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Ingrese ciudad"
            android:inputType="textPersonName"
            android:padding="10dip"
            android:textStyle="normal" />

        <EditText

            android:id="@+id/edtCodPostal"
            android:layout_width="316.88dp"
            android:layout_height="47.98dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:fontFamily="@font/noto_sans"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Ingrese codigo postal"
            android:inputType="textPersonName"
            android:padding="10dip" />

        <EditText

            android:id="@+id/edtProv"
            android:layout_width="316.88dp"
            android:layout_height="47.98dp"
            android:layout_marginBottom="28dp"
            android:width="1dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:fontFamily="@font/noto_sans"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Ingrese provincia"
            android:inputType="textPersonName"
            android:padding="10dip"
            android:textStyle="normal" />

        <EditText

            android:id="@+id/edtDireccion"
            android:layout_width="316.88dp"
            android:layout_height="47.98dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:fontFamily="@font/noto_sans"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Ingrese direccion"
            android:inputType="textPersonName"
            android:padding="10dip" />

        <EditText

            android:id="@+id/edtDni"
            android:layout_width="316.88dp"
            android:layout_height="47.98dp"
            android:layout_marginBottom="24dp"
            android:width="1dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:fontFamily="@font/noto_sans"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Ingrese D.N.I"
            android:inputType="textPersonName"
            android:padding="10dip"
            android:textStyle="normal" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSig1"
        android:layout_width="257dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        android:background="#00000000"
        android:backgroundTint="#70BDD6"

        android:fontFamily="@font/noto_sans_bold"
        android:foregroundGravity="center_vertical"
        android:gravity="center|center_vertical"
        android:text="Siguiente"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="52dp"
        tools:layout_conversion_absoluteWidth="257dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideInset"
    tools:context=".Menu.CadaPrestamoFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="14dp">

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/mask"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle_2"
                android:divider="@drawable/deck"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="91dp"
                    android:layout_height="100dp"
                    android:src="@drawable/deck"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/gabriel_dec2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.192" />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:shadowColor="#D6D6D6"
                    android:shadowRadius="@dimen/material_emphasis_disabled"
                    android:text="Nombre y apellido"
                    android:textColor="#797979"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_bold"
                    android:shadowColor="#CD2828"
                    android:text="Monto"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDinero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_black"
                    android:text="$2100"
                    android:textColor="#797979"
                    android:textSize="26sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/rectangle_5"
                android:orientation="vertical"
                android:paddingStart="24dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="5dp"
                    android:text="Dias entre cuotas"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvCantMeses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="10dp"
                    android:text="30 dias"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/plazo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="5dp"
                    android:text="Dias tolerancia"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDiaTol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="10dp"
                    android:text="1 semana"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/plazo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="5dp"
                    android:text="Interes por cuota"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvInteres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="10dp"
                    android:text="$120"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/plazo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="5dp"
                    android:text="Cantidad de cuotas"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvCantCuotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="10dp"
                    android:text="12"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/plazo7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="5dp"
                    android:text="Fecha actual"
                    android:textColor="#797979"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvFechaActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="10dp"
                    android:text="14/05/2020"
                    android:textColor="#797979"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="257dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"

                android:background="#00000000"
                android:backgroundTint="#70BDD6"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center"
                android:text="Solicitar"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:cornerRadius="50dp"
                app:shapeAppearance="@style/TextAppearance.Compat.Notification.Info.Media" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
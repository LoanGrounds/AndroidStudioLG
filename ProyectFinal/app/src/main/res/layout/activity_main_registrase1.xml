<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityRegistrase1">


    <TextView
        android:id="@+id/loangrounds"
        android:layout_width="407dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:fontFamily="@font/play"
        android:gravity="center_horizontal|top"
        android:text="LoanGrounds"
        android:textColor="#D417A4B7 "
        android:textColorHint="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <EditText

        android:id="@+id/edtNombre"
        android:layout_width="316.88dp"
        android:layout_height="47.98dp"
        android:layout_marginBottom="24dp"
        android:width="1dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="Ingrese nombre"
        android:inputType="textPersonName"
        android:padding="10dip"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/edtApelllido"
        app:layout_constraintEnd_toEndOf="@+id/edtApelllido"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtApelllido" />

    <EditText

        android:id="@+id/edtApelllido"
        android:layout_width="316.88dp"
        android:layout_height="47.98dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="Ingrese apellido"
        android:inputType="textPersonName"
        android:padding="10dip"
        app:layout_constraintBottom_toTopOf="@+id/edtCorreo"
        app:layout_constraintEnd_toEndOf="@+id/edtCorreo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtCorreo" />

    <EditText

        android:id="@+id/edtCorreo"
        android:layout_width="316.88dp"
        android:layout_height="47.98dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="Ingrese correo electronico"
        android:inputType="textPersonName"
        android:padding="10dip"
        app:layout_constraintBottom_toTopOf="@+id/btnSig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSig"
        android:layout_width="257dp"
        android:layout_height="60dp"
        android:layout_marginBottom="120dp"
        android:background="#00000000"
        android:backgroundTint="#70BDD6"
        android:fontFamily="@font/noto_sans_bold"
        android:foregroundGravity="center_vertical"

        android:gravity="center|center_vertical"
        android:text="Siguiente"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="52dp"
        tools:layout_conversion_absoluteWidth="257dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
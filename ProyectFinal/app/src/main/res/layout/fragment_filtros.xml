<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Menu.FiltrosFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/skbMax"
            style="@android:style/Widget.Material.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultFocusHighlightEnabled="false"
            android:duplicateParentState="false"
            android:indeterminate="false"
            android:paddingTop="20dp"
            android:progress="3"
            android:progressTint="@color/teal_200"
            android:progressTintMode="src_in"
            android:thumb="@drawable/thumb"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
            tools:layout_editor_absoluteX="-3dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Rango de precio"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/skbMin"
            style="@android:style/Widget.Material.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultFocusHighlightEnabled="false"
            android:duplicateParentState="false"
            android:indeterminate="false"
            android:paddingTop="20dp"
            android:progress="3"
            android:progressTint="@color/teal_200"
            android:progressTintMode="src_in"
            android:thumb="@drawable/thumb"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/skbMin"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="28dp"
                android:text="Max"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.448"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/tvPrecioMax"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/minprice"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="$1200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvMax"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/tvMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="28dp"
                android:text="Min"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.448" />

            <TextView
                android:id="@+id/tvPrecioMin"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/minprice"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="$1000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvMin"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skbMax"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvPlazotitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Plazo"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn1Mes"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/botonesplazos"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Hasta                1 mes"
                app:layout_constraintEnd_toStartOf="@+id/btn3meses"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPlazotitle" />

            <TextView
                android:id="@+id/btn3meses"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:background="@drawable/botonesplazos"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Hasta 3 meses"
                app:layout_constraintEnd_toStartOf="@+id/btn6Meses"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn1Mes"
                app:layout_constraintTop_toTopOf="@+id/btn1Mes" />

            <TextView
                android:id="@+id/btn18Meses"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:background="@drawable/botonesplazos"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Hasta 18 meses"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn12Meses"
                app:layout_constraintTop_toTopOf="@+id/btn12Meses" />

            <TextView
                android:id="@+id/btn6Meses"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:background="@drawable/botonesplazos"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Hasta 6 meses"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn3meses"
                app:layout_constraintTop_toTopOf="@+id/btn3meses" />

            <TextView
                android:id="@+id/btn9Meses"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/botonesplazos"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Hasta 9 meses"
                app:layout_constraintEnd_toStartOf="@+id/btn12Meses"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn1Mes" />

            <TextView
                android:id="@+id/btn12Meses"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:background="@drawable/botonesplazos"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Hasta 12 meses"
                app:layout_constraintEnd_toStartOf="@+id/btn18Meses"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn9Meses"
                app:layout_constraintTop_toTopOf="@+id/btn9Meses" />

            <Button
                android:id="@+id/btnAplicarFilt"
                android:layout_width="257dp"
                android:layout_height="70dp"
                android:backgroundTint="#70BDD6"
                android:fontFamily="@font/noto_sans_bold"
                android:foregroundGravity="center_vertical"
                android:gravity="center|center_vertical"
                android:text="Aplicar filtros"

                android:textColor="#ffffff"
                android:textSize="18sp"
                app:cornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn12Meses"
                app:layout_constraintVertical_bias="0.66"
                tools:layout_conversion_absoluteHeight="52dp"
                tools:layout_conversion_absoluteWidth="257dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
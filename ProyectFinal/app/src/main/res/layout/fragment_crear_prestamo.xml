<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.CrearPrestamoFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/loangrounds5"
            android:layout_width="388dp"
            android:layout_height="129dp"
            android:fontFamily="@font/play"
            android:gravity="center"
            android:text="Crear prestamo"
            android:textColor="#D417A4B7 "
            android:textColorHint="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="372dp"
            android:layout_height="20dp"
            android:text="Â¿Cuanto desea prestar?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loangrounds5" />


        <TextView
            android:id="@+id/btn1Mes"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/botonesplazos"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Un pago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/btn3meses"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:background="@drawable/botonesplazos"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="3 cuotas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn1Mes"
            app:layout_constraintTop_toTopOf="@+id/btn1Mes" />

        <TextView
            android:id="@+id/btn3meses3"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/botonesplazos"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="6 cuotas"
            app:layout_constraintStart_toStartOf="@+id/btn1Mes"
            app:layout_constraintTop_toBottomOf="@+id/btn1Mes" />

        <TextView
            android:id="@+id/btn18Meses"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/botonesplazos"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="12 cuotas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btn3meses"
            app:layout_constraintTop_toBottomOf="@+id/btn3meses" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Fecha de caducidad"
            app:layout_constraintStart_toStartOf="@+id/edtCantidadAPrestar"
            app:layout_constraintTop_toBottomOf="@+id/btn3meses3" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Interes del prestamo"
            app:layout_constraintStart_toStartOf="@+id/edtCantidadAPrestar"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate2" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cantidad de cuotas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtCantidadAPrestar" />

        <EditText

            android:id="@+id/edtCantidadAPrestar"
            android:layout_width="370dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:width="1dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:fontFamily="@font/noto_sans"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:padding="10dip"
            android:paddingLeft="10dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/editTextDate2"
            android:layout_width="370dp"
            android:layout_height="43dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@+id/edtCantidadAPrestar"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <SeekBar
            android:id="@+id/skbMin"
            style="@android:style/Widget.Material.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultFocusHighlightEnabled="false"
            android:duplicateParentState="false"
            android:indeterminate="false"
            android:paddingTop="20dp"
            android:progress="3"
            android:progressTint="@color/teal_200"
            android:progressTintMode="src_in"
            android:thumb="@drawable/thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvPrecioMin"
            app:layout_constraintTop_toBottomOf="@+id/tvPrecioMin" />

        <TextView
            android:id="@+id/tvPrecioMin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:background="@drawable/minprice"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="$1000"
            app:layout_constraintStart_toStartOf="@+id/editTextDate2"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <Button
            android:id="@+id/btnCrearPrestamo"
            android:layout_width="257dp"
            android:layout_height="70dp"
            android:layout_marginTop="52dp"
            android:backgroundTint="#70BDD6"
            android:fontFamily="@font/noto_sans_bold"

            android:foregroundGravity="center_vertical"
            android:gravity="center|center_vertical"
            android:text="Realizar prestamao"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skbMin"
            tools:layout_conversion_absoluteHeight="52dp"
            tools:layout_conversion_absoluteWidth="257dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center|top">


    <androidx.cardview.widget.CardView
        android:layout_width="361dp"
        android:layout_height="119dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D7FFFFFF">

            <TextView
                android:id="@+id/precio1"
                android:layout_width="124dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins_medium"
                android:gravity="top"
                android:text="xxxxx"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvMont"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tvMont"
                app:layout_constraintTop_toTopOf="@+id/tvMont"
                app:layout_constraintVertical_bias="0.0" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPrestamista"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/deck"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.487" />

            <TextView
                android:id="@+id/tvNombreApellido"
                android:layout_width="196dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/rubik_medium"
                android:paddingBottom="10dp"
                android:text="Nombre y apellido"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.177"
                app:layout_constraintStart_toEndOf="@+id/imgPrestamista"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMont"
                android:layout_width="56dp"
                android:layout_height="16dp"

                android:layout_marginStart="28dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-light"
                android:paddingRight="10dp"
                android:text="Monto:"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgPrestamista"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreApellido"
                app:layout_constraintVertical_bias="0.74" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrarse"
        app:layout_constraintEnd_toEndOf="@+id/btnRegistrarse"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnRegistrarse"
        app:strokeColor="#70BDD6 "
        app:strokeWidth="3dp"
        tools:layout_conversion_absoluteHeight="52dp"
        tools:layout_conversion_absoluteWidth="257dp" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginBottom="180dp"
        android:background="#00000000"
        android:backgroundTint="#70BDD6"
        android:fontFamily="@font/noto_sans_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Registrarse"
        android:textColor="#ffffff"
        android:textSize="18sp"

        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="52dp"
        tools:layout_conversion_absoluteWidth="257dp" />


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro.Inicio_RegistrarseFragment">


    <ImageView
        android:id="@+id/imgPrestamista"
        android:layout_width="240dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toTopOf="@+id/btnIniciarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403"
        app:srcCompat="@drawable/logonombre" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginBottom="24dp"
        android:background="#00000000"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/noto_sans_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Iniciar sesiÃ³n"
        android:textColor="#70BDD6"

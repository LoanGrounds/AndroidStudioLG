<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro.Inicio_RegistrarseFragment">


    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/noto_sans_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Iniciar sesiÃ³n"
        android:textColor="#70BDD6"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@+id/btnRegistrarse"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnRegistrarse"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:strokeColor="#70BDD6 "
        tools:layout_conversion_absoluteHeight="52dp"
        tools:layout_conversion_absoluteWidth="257dp" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#70BDD6"
        android:fontFamily="@font/noto_sans_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Registrarse"

        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion"
        tools:layout_conversion_absoluteHeight="52dp"
        tools:layout_conversion_absoluteWidth="257dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="160dp"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/logo_loan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="LoanGrounds"
        android:textColor="#17A4B7"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Bienvenido al mundo de los prestamos, una nueva realidad"
        android:textColor="#6D7C8F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Seleccionando alguna de las opciones estas acordando con los"
        android:textColor="#6D7C8F"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarse" />

    <TextView
        android:id="@+id/tvTerminos"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Terms of Services and Privacy Policy"
        android:textColor="#94A3B8"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>




<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityRegistrarse3">


    <TextView
        android:id="@+id/loangrounds"
        android:layout_width="407dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:fontFamily="@font/play"
        android:gravity="center_horizontal|top"
        android:text="LoanGrounds"
        android:textColor="#D417A4B7 "
        android:textColorHint="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtCBU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <EditText

        android:id="@+id/edtCBU"
        android:layout_width="316.88dp"
        android:layout_height="47.98dp"
        android:layout_marginBottom="24dp"
        android:width="1dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="Ingrese CBU"
        android:inputType="textPersonName"
        android:padding="10dip"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/edtAlias"
        app:layout_constraintEnd_toEndOf="@+id/edtAlias"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtAlias" />

    <EditText

        android:id="@+id/edtAlias"
        android:layout_width="316.88dp"
        android:layout_height="47.98dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="Ingrese alias"
        android:inputType="textPersonName"
        android:padding="10dip"
        app:layout_constraintBottom_toTopOf="@+id/edtCuit"
        app:layout_constraintEnd_toEndOf="@+id/edtCuit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtCuit" />

    <EditText

        android:id="@+id/edtCuit"
        android:layout_width="316.88dp"
        android:layout_height="47.98dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:hint="Ingrese C.U.I.T"
        android:inputType="textPersonName"
        android:padding="10dip"
        app:layout_constraintBottom_toTopOf="@+id/btnOmitir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSig3"
        android:layout_width="257dp"
        android:layout_height="60dp"
        android:layout_marginBottom="112dp"
        android:background="#00000000"
        android:backgroundTint="#70BDD6"
        android:fontFamily="@font/noto_sans_bold"
        android:foregroundGravity="center_vertical"

        android:gravity="center|center_vertical"
        android:text="Siguiente"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="52dp"
        tools:layout_conversion_absoluteWidth="257dp" />

    <Button
        android:id="@+id/btnOmitir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#FFFFFF"
        android:text="Omitir"
        android:textColor="#70BDD6"
        app:layout_constraintBottom_toTopOf="@+id/btnSig3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>